#!/usr/bin/env bash

cat > bin/backup-wiki <<EOF
#!/usr/bin/env bash

# generated from "${BASH_SOURCE[0]}"

mkdir -p backup
tar --create --exclude-vcs --gzip --file "backup/mediawiki_\$(date "+%Y-%m-%d_%H%M").tar.gz" mediawiki

# Report
echo Available database snapshots:
echo
mysqlbackups "${source_db}"
echo
echo Content of backup directory:
echo
ls -ltr backup
echo
EOF
