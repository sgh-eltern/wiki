#!/usr/bin/env bash

cat > bin/restore-mediawiki-snapshot <<EOF
#!/usr/bin/env bash

# generated from "${BASH_SOURCE[0]}"

mysqldump \\
    --host="\$(mysqlbackups "${source_db}" | head -1)" \\
    --user="${source_user}" \\
    --password="${source_password}" \\
  "${source_db}" \\
| mysql \\
    --host=rdbms \\
    --user="${target_user}" \\
    --password="${target_password}" \\
  "${target_db}"
EOF
